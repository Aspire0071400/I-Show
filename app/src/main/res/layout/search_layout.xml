<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/search_pic_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="10dp"
        android:src="@drawable/profileplaceholder"
        app:civ_border_color="@color/white"
        app:civ_border_width="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/search_pic_iv"
        app:layout_constraintStart_toEndOf="@+id/search_pic_iv"
        app:layout_constraintTop_toTopOf="@+id/search_pic_iv" />

    <TextView
        android:id="@+id/search_profession_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/search_pic_iv"
        app:layout_constraintStart_toEndOf="@+id/search_pic_iv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/search_follow_btn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginEnd="24dp"
        android:text="@string/follow"
        android:textColor="@color/white"
        android:background="@drawable/follow_btn_bg"
        app:layout_constraintBottom_toBottomOf="@+id/search_pic_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/search_pic_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>